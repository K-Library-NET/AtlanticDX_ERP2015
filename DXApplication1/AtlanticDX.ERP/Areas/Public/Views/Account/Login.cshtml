@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <style type="text/css">
        body {
            background: #35acdd;
        }

        .wrapper {
            width: 1280px;
            margin: 0 auto;
        }

        .logo {
            height: 150px;
        }

            .logo img {
                margin-top: 20px;
                margin-left: 30px;
            }

        .login-box {
            width: 600px;
            margin: 0 auto;
            background: #fff;
            border-radius: 5px 5px 5px 5px;
            padding-bottom: 20px;
            box-shadow: 0px 2px 10px #2f98c4;
            padding-bottom: 40px;
        }

            .login-box .top {
                height: 260px;
                background: url(/Content/images/192x192x1.png) center no-repeat;
                position: relative;
            }

        .login input {
            width: 265px;
            height: 36px;
            line-height: 36px;
            padding: 6px 0px 6px 45px;
            border: none;
            border: 1px solid #b3b3b3;
            vertical-align: middle;
            background-position: 0px -276px;
            font-size: 16px;
            border-radius: 2px 2px 2px 2px;
            color: #a9a9a9;
        }

            .login input:hover {
                border: 1px solid #35acdd;
            }

        .login {
            overflow: hidden;
        }

            .login li {
                height: 52px;
                width: 100%;
                text-align: center;
            }

                .login li.li1 {
                    margin-bottom: 20px;
                }

            .login .i1 {
                background: url(/Content/images/271x89x1.png) no-repeat;
                position: absolute;
                left: 160px;
                top: 14px;
                background-position: 0px 0px;
                width: 40px;
                height: 40px;
            }

            .login .i2 {
                background: url(/Content/images/271x89x1.png) no-repeat;
                position: absolute;
                left: 160px;
                top: 14px;
                background-position: 0px -66px;
                width: 40px;
                height: 40px;
            }

            .login .i3 {
                background: url(/Content/images/271x89x1.png) no-repeat;
                position: absolute;
                left: 413px;
                top: 14px;
                background-position: -246px -65px;
                width: 40px;
                height: 40px;
                cursor: pointer;
            }

            .login .li5 a {
                vertical-align: middle;
                margin-right: 5px;
                width: 310px;
                height: 48px;
                display: block;
                background: #35acdd;
                margin: 0 auto;
                border-radius: 2px 2px 2px 2px;
                line-height: 50px;
                font-size: 18px;
                color: #fff;
                font-weight: 400;
            }

            .login .li3 {
                height: 22px;
                position: relative;
                margin: 8px 0;
            }

                .login .li3 a {
                    color: #aaaaaa;
                    font-size: 12px;
                    position: absolute;
                    left: 400px;
                    line-height: 20px;
                }
    </style>
}
<div class="wrapper">
    <div class="logo">
        <img src="/Content/images/204x33x1.png" alt="" />
    </div>
    <div class="login-box">
        <div class="top">
            <i class="i4"></i>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <form action="/Public/Account/Login" method="post" id="loginForm">
            <ul class="login">
                <li class="relative li1">
                    <input id="usename" name="username" type="text" maxlength="25" value="请输入用户名或邮箱" />
                    <i class="i1">
                    </i>
                    <i class="i3"></i>
                </li>
                <li class="relative li2">
                    <input type="password" name="password" id="password" maxlength="20" value="" />
                    <i class="i2">
                    </i>
                    <i class="i3"></i>
                </li>
                <li class="li3">
                    @*<a href="/Public/Account/GetPassword">忘记密码？</a>*@
                </li>
                <li class="li5">
                    <a class="opacity09" href="javascript:;" onclick="javascript:$('form').submit();">
                        登录
                    </a>
                </li>
            </ul>
        </form>
    </div>
</div>
@section scripts{
    <script>
        $(function () {
            $("#usename").click(function () {
                if ($(this).val() == '请输入用户名或邮箱')
                    $(this).val("");
            }).blur(function () {
                if ($(this).val() == '')
                    $(this).val('请输入用户名或邮箱');
            });

            $(".login .i3").click(function () {
                $(this).parent().find("input").val("")
            });
            $("#usename,#password").keydown(function (e) {
                if (e.keyCode == 13) {
                    $('form').submit();
                }
            });

            $('#loginForm').submit(function () {
                if ($('#usename').val() == '请输入用户名或邮箱') {
                    alert('请输入用户名或账号');
                    $('#usename').focus().val('');
                    return false;
                }
                if ($('#password').val() == '') {
                    alert('请输入密码');
                    $('#password').focus().val('');
                    return false;
                }
                return true;
            });

        });
    </script>
}

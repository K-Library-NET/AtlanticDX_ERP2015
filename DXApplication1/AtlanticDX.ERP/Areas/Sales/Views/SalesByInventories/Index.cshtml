</div>
<script>
    function fun_operation_formatter(value, row, index) {
        var temp = '';
        if (row.ContractStatus == 0) { // 现货销售，未审核订单才出现以下两个操作
            //row.SaleContractStatus == 0) {
            temp += '<a href="javascript:;" class="edit" onclick="edit_sale_contract(\'' + row.ContractKey + '\')">编辑</a>';
            //temp += '<a href="javascript:;" class="audit" onclick="audit_sale_contract(\'' + row.ContractKey + '\')">审核</a>';
        }

        //if (row.ContractStatus != 1 && row.ContractStatus != -1) { //现货销售不是已经审核（已经选定了还价人）、已经结单（Closed），都可以“还价”
        //    temp += '<a href="javascript:;" class="bargain" onclick="add_sale_contract_bargain(\'' + row.ContractKey + '\')">还价</a>';
        //}

        return temp;
    }

    function edit_sale_contract(SaleContractKey) {
        parent.addMainTab('编辑现货销售合同', '/' + Area + '/' + Controller + '/Edit?SaleContractKey=' + SaleContractKey, true, true);
    }

    function audit_sale_contract(SaleContractKey) {
        parent.addMainTab('审核现货销售', '/' + Area + '/' + Controller + '/Audit?SaleContractKey=' + SaleContractKey, true);
    }

    function add_sale_contract_bargain(SaleContractKey) {
        parent.addMainTab('还价', '/' + Area + '/' + Controller + '/AddSaleBargin?SaleContractKey=' + SaleContractKey, true);


    }


    //提交还价信息
    function submit_sale_bargain_form(obj) {
        $.ajax({
            url: '/' + Area + '/' + Controller + '/AddSaleBargin',
            type: 'post',
            data: $(obj).serialize(),
            dataType: 'json',
            beforeSend: function () {
                $.messager.progress({
                    title: '',
                    msg: '处理中...'
                });
            },
            success: function (resp) {
                $.messager.progress('close');
                var messages = [];
                for (i = 0; i < resp.length; i++) {
                    for (j = 0; j < resp[i]['Messages'].length; j++) {
                        messages.push(resp[i]['Messages'][j]);
                    }
                }
                if (messages.length > 0) {
                    $.messager.alert('提示', messages.join('\n'));
                } else {
                    $.messager.alert('提示', '更新还价成功');
                }
            }
        });
        return false;
    }

</script>


                        <thead class="">
                            <tr>
                                <th class="check w20" width="20"></th>
                                <th class="w200" style="width:200px;">国家/厂号/货品名/品牌</th>
                                <th class="w120" style="width:120px;">
                                    @Html.DisplayNameFor(m => m.HongkongLogistics.LogisItems.First().ContractQuantity)
                                </th>
                                <th class="w120" style="width:120px;">
                                    @Html.DisplayNameFor(m => m.HongkongLogistics.LogisItems.First().ContractWeight)
                                </th>
                                <th class="w120" style="width:120px;">
                                    @Html.DisplayNameFor(m => m.HongkongLogistics.LogisItems.First().FreightCharges)
                                </th>
                                <th class="w120" style="width:120px;">
                                    @Html.DisplayNameFor(m => m.HongkongLogistics.LogisItems.First().Insurance)
                                </th>
                                <th class="w120" style="width:120px;">
                                    @Html.DisplayNameFor(m => m.HongkongLogistics.LogisItems.First().SubTotal)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.HongkongLogistics.LogisItems != null && Model.HongkongLogistics.LogisItems.Count > 0)
                            {
                                for (int i = 0; i < Model.ContractItems.Count; i++)
                                {
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>
                                            <input name="ProductFullName" style="width:200px;" value="@Model.ContractItems.ElementAt(i).ProductFullName" />
                                        </td>
                                        <td>
                                            <input type="hidden" name="HongkongLogistics.LogisItems[0].ProductItemId" value="@Model.HongkongLogistics.LogisItems.ElementAt(i).ProductItemId" />
                                            <input name="HongkongLogistics.LogisItems[0].ContractQuantity" type="text" value="@Model.HongkongLogistics.LogisItems.ElementAt(i).ContractQuantity" />
                                        </td>
                                        <td>
                                            <input name="HongkongLogistics.LogisItems[0].ContractWeight" type="text" class="num_compute" value="@Model.HongkongLogistics.LogisItems.ElementAt(i).ContractWeight" />
                                        </td>
                                        <td>
                                            <input name="HongkongLogistics.LogisItems[0].FreightCharges" type="text" class="num_compute" value="@Model.HongkongLogistics.LogisItems.ElementAt(i).FreightCharges" />
                                        </td>
                                        <td>
                                            <input name="HongkongLogistics.LogisItems[0].Insurance" type="text" value="@Model.HongkongLogistics.LogisItems.ElementAt(i).Insurance" />
                                        </td>
                                        <td>
                                            <input name="HongkongLogistics.LogisItems.SubTotal" type="text" value="@Model.HongkongLogistics.LogisItems.ElementAt(i).SubTotal" />
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div title="内地物流" style="padding:10px;">
                    <table class="svs_table ml20 mr20 related_product_table" style="">
                        <thead class="">
                            <tr>
                                <th class="check w20" width="20"></th>
                                <th class="w200" style="width:200px;">国家/厂号/货品名/品牌</th>
                                <th class="w120" style="width:120px;">
                                    @Html.LabelFor(m => m.MainlandLogistics.LogisItems.First().ContractQuantity)
                                </th>
                                <th class="w120" style="width:120px;">
                                    @Html.LabelFor(m => m.MainlandLogistics.LogisItems.First().ContractWeight)
                                </th>
                                <th class="w120" style="width:120px;">
                                    @Html.LabelFor(m => m.MainlandLogistics.LogisItems.First().FreightCharges)
                                </th>
                                <th class="w120" style="width:120px;">
                                    @Html.LabelFor(m => m.MainlandLogistics.LogisItems.First().Insurance)
                                </th>
                                <th class="w120" style="width:120px;">
                                    @Html.LabelFor(m => m.MainlandLogistics.LogisItems.First().SubTotal)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.MainlandLogistics.LogisItems != null && Model.MainlandLogistics.LogisItems.Count > 0)
                            {
                                for (int i = 0; i < Model.MainlandLogistics.LogisItems.Count; i++)
                                {
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>
                                            <input name="ProductFullName" style="width:200px;" value="@Model.ContractItems.ElementAt(i).ProductFullName" />
                                        </td>
                                        <td>
                                            <input type="hidden" name="MainlandLogistics.LogisItems[0].ProductItemId" value="@Model.MainlandLogistics.LogisItems.ElementAt(i).ProductItemId" />
                                            <input name="MainlandLogistics.LogisItems[0].ContractQuantity" type="text" value="@Model.MainlandLogistics.LogisItems.ElementAt(i).ContractQuantity" />
                                        </td>
                                        <td>
                                            <input name="MainlandLogistics.LogisItems[0].ContractWeight" type="text" class="num_compute" value="@Model.MainlandLogistics.LogisItems.ElementAt(i).ContractWeight" />
                                        </td>
                                        <td>
                                            <input name="MainlandLogistics.LogisItems[0].FreightCharges" type="text" class="num_compute" value="@Model.MainlandLogistics.LogisItems.ElementAt(i).FreightCharges" />
                                        </td>
                                        <td>
                                            <input name="MainlandLogistics.LogisItems[0].Insurance" type="text" value="@Model.MainlandLogistics.LogisItems.ElementAt(i).Insurance" />
                                        </td>
                                        <td>
                                            <input name="MainlandLogistics.LogisItems.SubTotal" type="text" value="@Model.MainlandLogistics.LogisItems.ElementAt(i).SubTotal" />
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div style="width: 1428px;" class="table_info mt10">
                <p class="clearf ml20">
                    <span class="default">@Html.DisplayNameFor(m => m.Payment)</span> @Html.EditorFor(m => m.Payment, new { htmlAttributes = new { @class = "w800" } })
                </p>
                <p class="clearf ml20">
                    <span class="default">@Html.DisplayNameFor(m => m.ImportDeposite)</span> @Html.EditorFor(m => m.ImportDeposite, new { htmlAttributes = new { @class = "w115" } })

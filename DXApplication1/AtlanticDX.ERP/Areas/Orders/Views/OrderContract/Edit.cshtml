        <div class="right_content_top bgc1" style="width:3080px;">
            <span class="default ml20">@Html.DisplayNameFor(m => m.SupplierId)</span>
            <span class="default"> @Html.DropDownListFor(m => m.SupplierId, AtlanticDX.ERP.Helper.OrdersHelper.GetSuppliers(), new { @class = "date_select mr20" }) </span>
            <span class="default ml20">@Html.DisplayNameFor(m => m.CTIME)</span>
            <span class="default">@Html.LabelFor(m => m.CTIME)</span>
            <span class="default ml20">@Html.DisplayNameFor(m => m.ETA)</span>
            <span class="eta_in">@Html.EditorFor(m => m.ETA, new { htmlAttributes = new { @class = "easyui-datebox", @style = "width:98%;" } })</span>
            <span class="default ml20">@Html.DisplayNameFor(m => m.ETD)</span>
            <span class="eta_in">@Html.EditorFor(m => m.ETD, new { htmlAttributes = new { @class = "easyui-datebox", @style = "width:98%;" } })</span>
            <span class="default ml20">@Html.DisplayNameFor(m => m.ShipmentPeriod)</span>
            <span class="default"> @Html.EditorFor(m => m.ShipmentPeriod, new { htmlAttributes = new { @class = "w120" } })</span>
            <span class="default ml20">@Html.DisplayNameFor(m => m.HarborId)</span>
            <span class="default"> @Html.DropDownListFor(m => m.HarborId, AtlanticDX.ERP.Helper.OrdersHelper.GetHarbors(), "--请选择--", new { @class = "date_select mr20" })</span>
            <span class="default ml20">@Html.DisplayNameFor(m => m.ContractKey)</span>
            <span>@Html.EditorFor(m => m.ContractKey, new { htmlAttributes = new { @class = "w120" } })</span>
        </div>
        <div class="right_content_top bb1" style="width:3080px;">
            <span class="default ml20">@Html.DisplayNameFor(m => m.ContainerSerial)</span>
            <span class="default">@Html.EditorFor(m => m.ContainerSerial, new { htmlAttributes = new { @class = "w120" } })</span>
            <span class="default ml20">@Html.DisplayNameFor(m => m.DeliveryBillSerial)</span>
            <span class="default">@Html.EditorFor(m => m.DeliveryBillSerial, new { htmlAttributes = new { @class = "w120" } })</span>
            <span class="default ml20">@Html.DisplayNameFor(m => m.HarborAgent)</span>
            <span class="default">
                @Html.DropDownListFor(m => m.HarborAgent.DeclarationCompanyId, AtlanticDX.ERP.Helper.OrdersHelper.GetHarborAgents(), new { @class = "date_select mr20" })
            </span>
            <span class="default ml20">@Html.DisplayNameFor(m => m.HongkongLogistics)</span>
            <span class="default">
                @Html.DropDownListFor(m => m.HongkongLogistics.HongKongLogisticsCompanyId, AtlanticDX.ERP.Helper.OrdersHelper.GetHongkongLogisticsCompanies(), new { @class = "date_select mr20" })
            </span>
            <span class="default ml20">@Html.DisplayNameFor(m => m.MainlandLogistics)</span>
            <span class="default">
                @Html.DropDownListFor(m => m.MainlandLogistics.MainlandLogisticsCompanyId, AtlanticDX.ERP.Helper.OrdersHelper.GetMainlandLogisticsCompanies(), new { @class = "date_select mr20" })
            </span>
            <span class="default">@Html.DisplayNameFor(m => m.OrderType)</span>
            <select name="OrderType" class="date_select mr20">
                <option value="0">期货</option>
                <option value="1">现货</option>
            </select>
        </div>
        <div class="ddgl clearf calculate">
            <table id="picked_products_table" class="svs_table ml20 mr20" style="width:3010px;">
                <thead class="">
                    <tr>
                        <th class="check w20"></th>
                        <th class="w150">货品出厂编号</th>
                        <th class="w200">国家/厂号/货品名/品牌</th>
                        <th class="w150">规格</th>
                        <th class="w100">包装</th>
                        <th class="w100">单位（吨/磅）</th>
                        <th class="w100">件数</th>
                        <th class="w100">净重</th>
                        <th class="w100">单价</th>
                        <th class="w100">采购币种</th>
                        <th class="w100">货款小计</th>
                        <th class="operation w150">操作</th>
                    </tr>
                </thead>
